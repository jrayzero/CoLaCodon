def intra_vertical(pred, ref):
  p = ref[pred]
  h,w = pred.get_dims()
  for y in range(h):
    for x in range(w):
      pred[y,x] = p(-1,x)

def intra_horizontal(pred, ref):
  p = ref[pred]
  h,w = pred.get_dims()
  for y in range(h):
    for x in range(w):
      pred[y,x] = p(y,-1)

def compute_all_costs(cost, raw, preds):
  costs = [cost(raw,pred) for pred in preds]
  return costs
